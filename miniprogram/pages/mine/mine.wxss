/* miniprogram/pages/mine/mine.wxss */
page{
  font-family: '微软雅黑';
}
.header{
  height: 400rpx;
  background-color:tomato;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.logo{
  background-color:white;
  width: 90%;
  height: 300rpx;
  margin:auto;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
}
.logo image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 20rpx;
}
.userDetail{
  text-align: center;
  /* color:white; */
  font-size: 34rpx;
  font-weight: bold;
}
/* list样式 */
.content{
  margin-top: 20rpx;
  font-size: 24rpx;
  width: 94%;
  margin-left: auto;
  margin-right: auto;
  background-color:white;
  height: 200rpx;
  border-radius: 15rpx;
}
.content view{
  height: 80rpx;
  line-height: 80rpx;
  box-shadow: 2rpx 2rpx 2rpx 2rpx rgba(68, 67, 66, 0.1);
  padding-left: 20rpx;
}
