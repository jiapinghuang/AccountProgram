/* miniprogram/pages/mine/mine.wxss */
page{
  /* font-family: '微软雅黑'; */
  font-size: 30rpx;
  background-color:rgba(0, 0, 0, 0.02)
}
.header{
  height: 400rpx;
  background-color:#1abc9c;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.logo{
  background-color:white;
  width: 90%;
  height: 300rpx;
  margin:auto;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
}
.logo image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin:0 auto;
}
.userDetail{
  width: 200rpx;
  margin: 0 auto;
  text-align: center;
  font-weight: bold;
  background-color:white;
  margin-top: 20rpx;
}


/*内容区域*/
.user_content {
  position: relative;
  margin-top: 40rpx;
 
}
.user_content .user_main {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: -30rpx;
  width: 90%;
  padding-bottom: 80rpx;
  color: #666;
}
.user_content .user_main .main_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.user_content .user_main .main_info_wrap .app_info_item {
  padding: 20rpx ;
  border-bottom: 1rpx solid #ccc;
}
.copyright {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translate(-50%,-50%);
  color: rgb(131, 125, 125);
  text-align: center;
  font-size: 24rpx;
  padding: 0 0 10rpx;
}