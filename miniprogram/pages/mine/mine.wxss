/* miniprogram/pages/mine/mine.wxss */

.logo{
  background-color:pink;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* height: 400rpx; */
}
.logo image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 20rpx;
}
.userDetail{
  text-align: center;
  color:white;
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 20rpx;
}
.nav{
  color: cadetblue;
  font-size: 28rpx;
  font-weight: bold;
  display: inline;
  margin-right: 40rpx;
}
.Navcell{
  display: flex;
  flex-wrap: nowrap;
}

.van-swipe-cell__left,
.van-swipe-cell__right {
  display: inline-block;
  width: 65px;
  height: 44px;
  font-size: 15px;
  line-height: 44px;
  color: #fff;
  text-align: center;
  background-color: cadetblue;
}
.title{
  background-color: #f5f5f5;
  display: flex;
  flex-wrap: nowrap;
}
.title view{
  margin-left: 20rpx;
}