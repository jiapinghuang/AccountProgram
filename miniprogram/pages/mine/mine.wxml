<view wx:if="{{!isLogin}}">
    <view class="logo">
        <image src="../asset/logo.jpg"></image>
        <view class="userDetail">
          <van-button type="primary" block wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</van-button>
        </view> 
    </view>
    <view class="content">
      <view>删除我的所有数据</view>
      <view>查看所有记帐</view>
    </view>
</view>

<view wx:if="{{isLogin}}">
<view class="header">
  <view class="logo">
      <image src="{{avatarUrl}}"></image>
      <view class="userDetail">
          <view>{{userName}}</view>
          <view>{{userCity}}</view>
      </view> 
  </view>
</view>

<view class="content">
    <view bindtap="delclick">删除我的所有数据</view>
    <view bindtap="clickUrl">查看所有记帐</view>
</view>
</view>

<van-dialog id="van-dialog" />
<van-toast id="van-toast" />