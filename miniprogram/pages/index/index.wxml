
<view class="header">
  <view class="header_hd">   
    <view class="header_hd_num">{{IMsum-OMsum}}</view>
    <view>当前盈亏</view>
  </view>
  <view class="header_bd">
    <view class="item border">
      <view class="item_time">本月收入</view>
      <view>{{IMsum}}</view>
    </view>
    <view class="item">   
      <view class="item_time">本月支出</view> 
      <view>{{OMsum}}</view>
    </view>
  </view> 

</view>

<!-- 今日查询 -->
<view class="search">
  <view class="search_date">{{ selectDate }}</view>
  <view class="search_money" wx:if="{{Isum}}">{{Isum}}¥</view>
  <view class="search_money" wx:if="{{Osum}}">{{Osum}}¥</view>
  <view><image src="../asset/search.png" bindtap="onDisplay"></image></view>
</view>
<!-- 日期 -->
  <van-calendar show="{{ show }}" bind:close="onClose" bind:confirm="onConfirm"
  min-date="{{ minDate }}" default-date='{{defaultDate}}' max-date='{{maxDate}}'
  /> 

<!-- 数据显示 -->
<view class="list"  wx:for="{{accountDetail}}">  
    <view class="item">  
      <view class="list_hd" >
          <view class="title">{{item.key}}</view>
          <view class="sum">{{item.count}}¥</view>
      </view>
      <view class="list_bd"  wx:for="{{item.value}}"> 
          <view>{{item.desc}}</view>
          <view>{{item.money}}</view>
      </view>
    </view>
</view>


<!-- 没有记录 -->
<view class="nolist" wx:if="{{accountDetail.length<=0}}">
    <van-empty  class="custom-image" description="一点东西都没有哦~"></van-empty>
</view>
<!-- 遮罩 -->
<view class="{{overlayShow ? 'mask':'dd'}}" bindtap="onLoginTip"></view>
<!-- 提示框 -->
<van-dialog id="van-dialog" />
<!-- 新增按钮 -->
<view class="addIcon"> 
    <navigator class="nav" url="/pages/count/count">
      <van-icon name="add"  size="50px" color="tomato"></van-icon>
    </navigator>
</view>

