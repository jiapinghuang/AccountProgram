/* miniprogram/pages/index/index.wxss */
.count{
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-items: center;
  text-align: center;
  color: white;
}
.addIcon{
  position: fixed;
  bottom: -10rpx;
  right: 43%;
}

.header{
  background-color: #1abc9c;
  color: white;
  width: 100%;
  /* border-radius: 25rpx; */
}
.header .header_hd{
  height: 200rpx;
  width: 200rpx;
  margin: 0 auto;
  text-align: center;
  padding-top: 50rpx;
  /* background-color: green; */
}
.header_hd .header_hd_num{
  font-size: 80rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

/*本月支出收入样式**/
.header_bd{
  height: 180rpx;
  margin: 0 auto;
  overflow: hidden;
  padding-top: 60rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
}
.header_bd .item{
  padding: 0 110rpx;
  display: block;
  text-align: center;
  margin-bottom: 30rpx;
}
.header_bd .item:first-child{
  border-right: 2rpx solid whitesmoke;
}
.item .item_time{
  font-size: 34rpx;
}
/* 搜索 */
.search{
  margin-top: 20rpx;
  color: white;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;  
}
.search view{
  padding: 0 40rpx;
}
.search_date{
  border-radius: 40rpx;
  background-color: #f1c40f;
  margin-left: 30rpx;
}
.search_money{
  border-radius: 40rpx;
  background-color: #f1c40f;
}
.search view image{
  width: 80rpx;
  height: 80rpx;
  margin-top: -10rpx;
  vertical-align: bottom; /* 设置图片居中 */
}

/* 数据列表 */
.list{
  height: auto;
  margin-top: 40rpx;
  margin-left:auto;
  margin-right: auto;
  width: 90%;
  box-shadow: 2rpx 2rpx 2rpx rgba(10, 10, 10, 0.2);
}
.item .list_hd{
  height: 60rpx;
  line-height: 60rpx;
  color:#1abc9c;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  padding: 15px 40rpx;
  border-top:2rpx solid #e2dede;
  border-left:2rpx solid #e2dede;
}
.item .list_hd .title{
  
}
.item .list_bd{
  display: flex;
  padding: 10rpx 40rpx;
  height: 50rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  justify-content: space-between;
  border-top:2rpx solid #e2dede;
  border-left:2rpx solid #e2dede;
}
/* 没有数据时 */
.nolist{
  height: 400rpx;
  line-height: 400rpx;
  text-align: center;
}
/* 遮罩样式 */
.mask{
  width:100%;
  height:100%;
  position:absolute;
  background-color:rgb(12, 12, 12);
  z-index:2;
  top:0;
  left:0;
  opacity:0.5;
}