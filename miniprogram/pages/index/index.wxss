.count{
  height: 150rpx;
  background-color:green; 
  display: flex;
  align-items: center;
  justify-items: center;
  text-align: center;
  color: white;
}
.item_container{
  width: 100%;
  height:auto;
  border:2rpx solid #f5f5f5
}
.item_container .item{
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
 .item_container .item .item_1 .O{
  color: red;
}
.mask{
  width:100%;
  height:100%;
  position:absolute;
  background-color:#999;
  z-index:2;
  top:0;
  left:0;
  opacity:0;
}