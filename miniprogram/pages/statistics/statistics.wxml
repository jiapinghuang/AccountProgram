<!-- <view>1、统计所有收入支出的数据，可根据日期（年月日）分段筛选记账数据</view>
<view>2、数据可视化显示：饼状图分块统计记账数据</view>
<view>3、统计每种记账类型的总金额和总笔数据</view>
<view>4、查看每种类型的详细数据</view> -->
<van-cell title="选择日期区间" value="{{ showDate }}" bind:click="onDisplay" />
<van-calendar
  show="{{ show }}"
  type="range"
  bind:close="onClose"
  bind:confirm="onConfirm"
  min-date="{{ minDate }}" 
  
  max-date="{{defaultDate}}"
/>
<van-button type="primary" block size="normal" bind:click="callSelectRangDate">查询</van-button>
<view class="mycontainer">
  <canvas type="2d" id="myCanvas" class="canvas"></canvas> 
</view>
<van-collapse value="{{ activeNames }}" bind:change="onChange">
  <van-collapse-item :name="{{item.index+1}}" wx:for="{{arrObj}}">
    <view slot="title">
      {{item.name}}
      <view>总金额:{{item.data}}</view> 
      <view>{{item.sum}}笔</view></view>
    <view>
      <van-row>
        <van-col span="4"offset="2" >时间</van-col>
        <van-col span="4">类型</van-col>
        <van-col span="4">收支</van-col>
        <van-col span="4">金额</van-col>
        <van-col span="4">备注</van-col>
      </van-row>
      <van-row wx:for="{{item.detail}}" >
        <van-col span="4" >{{item.addDate}}</van-col>
        <van-col span="4"  offset="2">{{item.item_name}}</van-col>
        <van-col span="4">{{item.item_type}}</van-col>
        <van-col span="4">{{item.money}}</van-col>
        <van-col span="4">{{item.desc}}</van-col>
      </van-row>
       {{item._id}}
    </view>
  </van-collapse-item>
</van-collapse>


