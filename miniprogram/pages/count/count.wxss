/* miniprogram/pages/count/count.wxss */
.grids{
  display: flex;
  flex-wrap: wrap;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
  border-left: 2rpx solid #f5f5f5;
  margin-left: 30rpx;
}
.grids .item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 24%;
  height: 100rpx;
  border-right: 2rpx solid #f5f5f5;
  border-bottom: 2rpx solid #f5f5f5;
  box-sizing: border-box;/*不将边框算进盒子宽度*/
}
.grids .item text {
  color: #888;
  font-size: 28rpx;
}
.item .selected{
  background-color:greenyellow;
}
.item .unselected{
  background-color:white;
}
/* 遮罩 */
.mask{
  width:100%;
  height:100%;
  position:absolute;
  background-color:#999;
  z-index:2;
  top:0;
  left:0;
  opacity:0;
}

/* 选项卡样式 */
 .actives{
  background-color: tomato;
}

.unactives{
  background-color: rgb(122, 126, 116);
}
.itemList{
  padding:15rpx;
  border-radius: 35rpx;
  font-size: 24rpx;
  color: white;
}