/* 数据列表 */
.list{
  height: auto;
  /* background-color: tomato; */
  margin-top: 40rpx;
  margin-left:auto;
  margin-right: auto;
  width: 90%;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 2rpx rgba(61, 59, 58, 0.281);
}
.item .list_hd{
  height: 60rpx;
  line-height: 60rpx;
  color:white;
  font-size: 38rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  background-color: #1abc9c;

}
.item .list_bd{
  display: flex;
  padding: 0 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  justify-content: space-between;
  font-size: 26rpx;
}
.item .list_bd .left{
  width: 45%;
  text-align: left;
}
.item .list_bd .middle{
  width: 45%;
  text-align: left;
}
.item .list_bd .small{
  width: 10%;
  text-align: right;
  font-weight: bold;
  font-size: 30rpx;
}
/* 没有数据时 */
.nolist{
  height: 400rpx;
  line-height: 400rpx;
  /* background-color: #f5f5f5; */
  text-align: center;
}
